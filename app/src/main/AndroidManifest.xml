<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unal.jomartinezch.cinemapp" >

    <application
        android:name=".util.AppController"
        android:allowBackup="true"
        android:description="@string/description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.ActivityStart"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ActivityLobby"
            android:label="@string/nav_open"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ActivityMovieDetail"
            android:icon="@drawable/ic_boxoffice"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/DetailsTheme"
            />
        <activity
            android:name=".activity.ActivityTheaterDetail"
            android:icon="@drawable/ic_theater"
            android:label="@string/title_activity_theater_detail"
            android:theme="@style/DetailsTheme" >>
        </activity>
        <activity
            android:name=".activity.ActivityShowtime"
            android:icon="@drawable/ic_showtime"
            android:label="@string/title_activity_showtime"
            android:theme="@style/ShowtimeTheme" >>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>
