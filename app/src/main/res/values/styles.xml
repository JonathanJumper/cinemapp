<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Start theme. -->
    <style name="StartTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        </style>

    <!-- Lobby theme. -->
    <style name="LobbyTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:textColorPrimary">@color/background</item>
        </style>


    <!-- Details theme -->
    <style name="DetailsTheme" parent="Theme.AppCompat">
        <item name="android:animateLayoutChanges">true</item>
        <item name="colorPrimary">@color/details</item>
        <item name="colorPrimaryDark">@color/detailsDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        </style>

    <!-- Showtime theme -->
    <style name="ShowtimeTheme" parent="Theme.AppCompat">
        <item name="android:animateLayoutChanges">true</item>
        <item name="colorPrimary">@color/showtime</item>
        <item name="colorPrimaryDark">@color/showtimeDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        </style>

</resources>
