<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/background</item>
        </style>

    <!-- Details theme -->
    <style name="DetailsTheme" parent="Theme.AppCompat">
        <item name="android:animateLayoutChanges">true</item>
        <item name="colorPrimary">@color/details</item>
        <item name="colorPrimaryDark">@color/detailsDark</item>
        <item name="android:textColorPrimary">@color/background_text</item>
        </style>

    <!-- Showtime theme -->
    <style name="ShowtimeTheme" parent="Theme.AppCompat">
        <item name="android:animateLayoutChanges">true</item>
        <item name="colorPrimary">@color/showtime</item>
        <item name="colorPrimaryDark">@color/showtimeDark</item>
        <item name="android:textColorPrimary">@color/background_text</item>
        </style>

</resources>
