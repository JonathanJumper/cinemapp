<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        />

    <ImageView
        android:id="@+id/findMe"
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:scaleType="center"
        android:src="@drawable/ic_findme"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_findme"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/detailsMap"
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:scaleType="center"
        android:src="@drawable/ic_details"
        android:background="@drawable/button_details"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/findMe"
        android:visibility="invisible"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/moviesMap"
        android:layout_width="@dimen/thumbnail_size"
        android:layout_height="@dimen/thumbnail_size"
        android:scaleType="center"
        android:src="@drawable/ic_showtime"
        android:background="@drawable/button_showtime"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/detailsMap"
        android:visibility="invisible"
        android:clickable="true"
        />

</RelativeLayout>