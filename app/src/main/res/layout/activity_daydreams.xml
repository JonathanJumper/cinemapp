<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.daydreams.cinemapp.activity.ActivityDaydreams"
    android:background="@drawable/bg_pattern">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true"
        android:focusableInTouchMode="false" />

    <ImageView
        android:id="@+id/dd_logo"
        android:layout_width="@dimen/dd_width"
        android:layout_height="@dimen/dd_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/daydreams"/>

    <TextView android:text="@string/company"
        android:id="@+id/dd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_text"
        android:shadowColor="@color/background_light"
        android:textSize="@dimen/txt_dd_name"
        android:layout_above="@+id/dd_slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView android:text="@string/slogan"
        android:id="@+id/dd_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_text"
        android:shadowColor="@color/background_light"
        android:textSize="@dimen/txt_dd_slogan"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>
