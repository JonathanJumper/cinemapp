<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    android:background="@drawable/bg_pattern"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ab_logo"
            android:paddingRight="@dimen/dd_image_padding"
            android:paddingLeft="@dimen/dd_image_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/daydreams"/>

        <TextView android:text="@string/company"
            android:id="@+id/ab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#54956f"
            android:textSize="@dimen/txt_dd_name"
            android:layout_below="@+id/ab_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_txt_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mailbox_desc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="@string/legal_advice"
            android:textColor="@color/background_light"
            android:padding="5dp"
            android:textSize="@dimen/mailbox_desc_size"
            android:gravity="fill_horizontal"
            android:layout_below="@+id/ab_name"/>

    </RelativeLayout>

</ScrollView>